<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.bemyfriend.bmf.community.model_review.mapper.ReviewMapper">

    <!-- 페이징 처리는 추후에~ -->
	 <select id="selectReviewList" resultType="review">

      select * 
      from 
         (
              select
                 rownum as rnum, a.*
                 from review a
                 )
             where
             rnum between 1 and 3 <!-- 추후 수정 -->
    </select>  
        
    <insert id="insertreview">
    insert into review(review_no,user_id,review_title,review_content) 
    values(sc_rv_idx.nextval,#{userId},#{reviewTitle},#{reviewContent})
    </insert>
</mapper>