<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.bemyfriend.bmf.member.user.model.repository.UserRepository">
 
 
 	<!-- 회원정보 수정하기 -->
 	<update id="updateUserInfo"><!--update문 resultType 필요X -->
 		UPDATE USERS
 			<set>
 				<if test="userPw != null">
 					user_pw = #{userPw}
 				</if>
 				<if test="userName != null">
 					,user_name = #{userName}
 				</if>
 				<if test="userAdd != null">
 					,user_add = #{userAdd}
 				</if>	
 				<if test="userTell != null">
 					,user_tell = #{userTell}
 				</if>
 				<if test="userMail != null">
 					,user_mail = #{userMail}
 				</if>
 				<if test="userBirth != null">
 					,user_birth = #{userBirth}
 				</if>
 			</set>
 		WHERE USER_ID = #{userId}
 	</update>
 	
 	
 	<!-- 회원 서비스 등록하기 -->
 	<insert id="uploadUserService">
 		INSERT INTO USER_SERVICE(USER_ID, SUP_LIFT, SUP_ELV, SUP_BATH, SUP_VOICE, SUP_BLOCK, SUP_SIGN, SUP_PARK, SUP_CHARGE, SUP_WELFARE)
 		values(#{userId},#{supLift}, #{supElv}, #{supBath}, #{supVoice},#{supBlock}, #{supSign}, #{supPark}, #{supCharge},#{supWelfare})
 	</insert>
 	
 	
 	
 	<!-- 회원 서비스 수정하기 -->
 	<update id="updateUserService">
 		UPDATE USER_SERVICE
 		<set>
 			<if test="supLift == 1">SUP_LIFT = '1'</if>
 			<if test="supElv == 1">,SUP_ELV = '1'</if>
 			<if test="supBath == 1">,SUP_BATH = '1'</if>
 			<if test="supVoice == 1">,SUP_VOICE = '1'</if>
 			<if test="supBlock == 1">,SUP_BLOCK = '1'</if>
 			<if test="supSign == 1">,SUP_SIGN = '1'</if>
 			<if test="supPark == 1">,SUP_PARK = '1'</if>
 			<if test="supCharge == 1">,SUP_CHARGE = '1'</if>
 			<if test="supWelfare == 1">,SUP_WELFARE = '1'</if>
 			<if test="supLift == 0">,SUP_LIFT = '0'</if>
 			<if test="supElv == 0">,SUP_ELV = '0'</if>
 			<if test="supBath == 0">,SUP_BATH = '0'</if>
 			<if test="supVoice == 0">,SUP_VOICE = '0'</if>
 			<if test="supBlock == 0">,SUP_BLOCK = '0'</if>
 			<if test="supSign == 0">,SUP_SIGN = '0'</if>
 			<if test="supPark == 0">,SUP_PARK = '0'</if>
 			<if test="supCharge == 0">,SUP_CHARGE = '0'</if>
 			<if test="supWelfare == 0">,SUP_WELFARE = '0'</if>
 		</set>
 		WHERE USER_ID = #{userId}
 	</update>
 	
 	
 	
 	

 	
 	<!-- 회원 사진파일 새로 업로드-->
 	<insert id ="uploadFile">
 		INSERT INTO B_FILE(FILE_NO, TYPE_IDX, ORIGIN_FILE_NAME, RENAME_FILE_NAME, SAVE_PATH)
 			VALUES (SC_FILE_IDX.NEXTVAL, #{typeIdx}, #{originFileName}, #{renameFileName}, #{savePath})
 	</insert>
 	
 	
 	<!-- 회원 사진파일 업데이트 -->
 	<update id = "updateFile">
 		UPDATE B_FILE SET ORIGIN_FILE_NAME = #{originFileName}, RENAME_FILE_NAME = #{renameFileName}
 		, SAVE_PATH = #{savePath} WHERE TYPE_IDX = #{typeIdx}
 	</update>
 	
 	
 	
 	<!--  회원사진 정보 가져오기 -->
 	<select id = "selectUserFile" resultType = "file">
 		SELECT * FROM B_FILE WHERE TYPE_IDX = #{FindUserIdx}
 	</select>
</mapper>

