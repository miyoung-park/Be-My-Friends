<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.bemyfriend.bmf.board.model.mapper.BoardMapper">

    <!-- 페이징 처리는 추후에~ -->
	<select id="selectReviewList" resultType="board">

      select * from review order by review_no desc limit #{startRow},#{endRow}
    </select> 
       
    <insert id="insertreview">
    insert into review(user_id,review_title,review_content) 
    values(#{userId},#{reviewTitle},#{reviewContent})
    </insert>
</mapper>